<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.api.customer.mappers.UserMapper">

    <select id="findByEmail" parameterType="com.api.customer.entities.UserEntity"
        resultMap="accountResult"> SELECT user_id, user_name, email, password FROM USER WHERE email
        = #{email} </select>

    <resultMap id="accountResult" type="com.api.customer.entities.UserEntity">
        <result property="userId" column="user_id" />
        <result property="userName" column="user_name" />
        <result property="email" column="email" />
        <result property="password" column="password" />
    </resultMap>

</mapper>